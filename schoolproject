    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            const challengeCards = document.querySelectorAll('.challenge-card');
            challengeCards.forEach(card => {
                const tooltip = card.querySelector('.challenge-tooltip');
                card.addEventListener('mouseenter', () => {
                    tooltip.classList.remove('hidden');
                });
                card.addEventListener('mouseleave', () => {
                    tooltip.classList.add('hidden');
                });
            });

            const roiChartCtx = document.getElementById('roiChart').getContext('2d');
            let roiChart;

            const newHiresSlider = document.getElementById('newHires');
            const manualHoursSlider = document.getElementById('manualHours');
            const avgRateSlider = document.getElementById('avgRate');
            const newHiresValue = document.getElementById('newHiresValue');
            const manualHoursValue = document.getElementById('manualHoursValue');
            const avgRateValue = document.getElementById('avgRateValue');
            
            const AETHERFLOW_HOURS_PER_HIRE = 0.5;

            function calculateCosts() {
                const hires = parseInt(newHiresSlider.value);
                const hours = parseInt(manualHoursSlider.value);
                const rate = parseInt(avgRateSlider.value);

                newHiresValue.textContent = hires;
                manualHoursValue.textContent = hours;
                avgRateValue.textContent = rate;

                const manualCost = hires * hours * rate;
                const aetherflowCost = hires * AETHERFLOW_HOURS_PER_HIRE * rate;
                
                return [manualCost, aetherflowCost];
            }

            function updateChart() {
                const [manualCost, aetherflowCost] = calculateCosts();
                roiChart.data.datasets[0].data[0] = manualCost;
                roiChart.data.datasets[0].data[1] = aetherflowCost;
                roiChart.options.plugins.title.text = `Estimated Monthly Savings: $${(manualCost - aetherflowCost).toLocaleString()}`;
                roiChart.update();
            }

            function createChart() {
                const [manualCost, aetherflowCost] = calculateCosts();
                roiChart = new Chart(roiChartCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Manual Onboarding', 'With AetherFlow'],
                        datasets: [{
                            label: 'Estimated Monthly Onboarding Cost ($)',
                            data: [manualCost, aetherflowCost],
                            backgroundColor: [
                                'rgba(239, 68, 68, 0.6)',
                                'rgba(59, 130, 246, 0.6)'
                            ],
                            borderColor: [
                                'rgba(239, 68, 68, 1)',
                                'rgba(59, 130, 246, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '$' + value.toLocaleString();
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                             title: {
                                display: true,
                                text: `Estimated Monthly Savings: $${(manualCost - aetherflowCost).toLocaleString()}`,
                                font: {
                                    size: 16,
                                    weight: 'bold'
                                },
                                padding: {
                                    top: 10,
                                    bottom: 20
                                }
                            }
                        }
                    }
                });
            }

            createChart();
            newHiresSlider.addEventListener('input', updateChart);
            manualHoursSlider.addEventListener('input', updateChart);
            avgRateSlider.addEventListener('input', updateChart);

            const integrationIcons = document.querySelectorAll('.integration-icon');
            const integrationPanes = document.querySelectorAll('.integration-pane');

            integrationIcons.forEach(icon => {
                icon.addEventListener('click', () => {
                    const target = icon.dataset.target;

                    integrationIcons.forEach(i => i.classList.remove('active'));
                    icon.classList.add('active');

                    integrationPanes.forEach(pane => {
                        if (pane.id === `${target}-content`) {
                            pane.classList.remove('hidden');
                            pane.classList.add('active');
                        } else {
                            pane.classList.add('hidden');
                            pane.classList.remove('active');
                        }
                    });
                });
            });

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('main section');
            const header = document.getElementById('header');

            const observerOptions = {
                root: null,
                rootMargin: `-${header.offsetHeight}px 0px 0px 0px`,
                threshold: 0.4
            };

            const sectionObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.getAttribute('id');
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href') === `#${id}`) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                sectionObserver.observe(section);
            });

            const generateBtn = document.getElementById('generateBlueprintBtn');
            const jobRoleInput = document.getElementById('jobRole');
            const resultDiv = document.getElementById('blueprintResult');
            const loadingIndicator = document.getElementById('loadingIndicator');

            generateBtn.addEventListener('click', async () => {
                const jobRole = jobRoleInput.value.trim();
                if (!jobRole) {
                    resultDiv.innerHTML = '<p class="text-center text-red-500">Please enter a job role.</p>';
                    return;
                }

                loadingIndicator.classList.remove('hidden');
                resultDiv.innerHTML = '';
                
                try {
                    const systemPrompt = `You are an expert HR and IT specialist for a modern tech company. Your task is to generate a comprehensive "Day One Onboarding Blueprint" for a new employee. This blueprint must be structured with clear, bolded headings. The content should be practical and detailed, as if it were to be used to provision a new hire. The blueprint must contain four sections with the following exact titles: "Core Responsibilities:", "Required Software/Tools:", "Required System Access/Permissions:", and "Key Onboarding Milestones (First 30/60/90 Days):".`;
                    const userQuery = `Create a Day One Onboarding Blueprint for the job role: ${jobRole}.`;
                    
                    const payload = {
                        contents: [{ parts: [{ text: userQuery }] }],
                        systemInstruction: {
                            parts: [{ text: systemPrompt }]
                        },
                        tools: [{ "google_search": {} }],
                    };

                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    
                    const data = await response.json();
                    const generatedText = data.candidates?.[0]?.content?.parts?.[0]?.text;
                    
                    if (generatedText) {
                        const formattedText = generatedText.replace(/\*\*(.*?):\*\*/g, '<h3>$1:</h3>');
                        resultDiv.innerHTML = `<div>${formattedText}</div>`;
                    } else {
                         resultDiv.innerHTML = '<p class="text-center text-red-500">Failed to generate a blueprint. Please try again.</p>';
                    }
                } catch (error) {
                    resultDiv.innerHTML = `<p class="text-center text-red-500">An error occurred: ${error.message}.</p>`;
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });
        });
    </script>
</body>
</html>

